generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String?       @unique
  passwordHash String?
  name         String?
  googleId     String?       @unique
  progress     UserProgress?
  habits       Habit[]
  habitLogs    HabitLog[]
  todos        Todo[]
  focusSessions FocusSession[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model UserProgress {
  id         String   @id @default(cuid())
  userId     String   @unique
  xpTotal    Int      @default(0)
  level      Int      @default(1)
  forgeCoins Int      @default(0)
  rank       String   @default("Ember")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Habit {
  id         String     @id @default(cuid())
  userId     String
  title      String
  type       HabitType
  difficulty Int
  color      String?    @default("#58a6ff")
  schedule   Json?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs       HabitLog[]

  @@index([userId])
}

model HabitLog {
  id      String      @id @default(cuid())
  userId  String
  habitId String
  date    DateTime
  status  HabitStatus
  xp      Int         @default(0)
  coins   Int         @default(0)
  habit   Habit       @relation(fields: [habitId], references: [id], onDelete: Cascade)
  user    User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, habitId, date])
  @@index([userId])
  @@index([userId, date])
  @@index([habitId, date])
}

enum HabitType {
  FORGE
  PURGE
}

enum HabitStatus {
  FORGED
  RESISTED
  MISSED
  SLIPPED
}

model Todo {
  id          String       @id @default(cuid())
  userId      String
  title       String
  description String?
  priority    TodoPriority
  color       String       @default("#58a6ff")
  xpReward    Int
  coinReward  Int
  isDaily     Boolean      @default(false)
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime     @default(now())

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  focusSessions FocusSession[]

  @@index([userId])
  @@index([completedAt])
}

enum TodoPriority {
  LOW
  MEDIUM
  HIGH
}

model FocusSession {
  id           String    @id @default(cuid())
  userId       String
  durationMin  Int
  type         FocusType @default(DEEP)
  startedAt    DateTime
  endedAt      DateTime?
  completed    Boolean   @default(false)
  cancelled    Boolean   @default(false)
  todoId       String?
  notes        String?
  xpAwarded    Int       @default(0)
  coinsAwarded Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  todo Todo? @relation(fields: [todoId], references: [id], onDelete: SetNull)

  @@index([userId, startedAt])
  @@index([userId, completed])
}

enum FocusType {
  DEEP
  LIGHT
}
